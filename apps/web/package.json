{
	"name": "@budgetbee/web",
	"version": "1.0.6",
	"private": true,
	"scripts": {
		"dev": "next dev -p 3000",
		"build": "next build --no-lint",
		"start": "next start -p 3000",
		"lint": "next lint",
		"test": "vitest run",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"test:all": "npm run test:run && npm run benchmark:all",
		"bench": "vitest bench",
		"bench:run": "vitest bench --run",
		"bench:watch": "vitest bench --watch",
		"bench:reporter": "vitest bench --reporter=verbose",
		"bench:json": "vitest bench --reporter=json --outputFile=./benchmark-results.json",
		"bench:compare": "vitest bench --reporter=verbose --compare",
		"perf:store": "vitest bench --config vitest.config.performance.ts --run src/**/*.bench.ts",
		"perf:memory": "vitest bench --config vitest.config.performance.ts --run --reporter=verbose src/**/memory.bench.ts",
		"perf:load": "vitest bench --config vitest.config.performance.ts --run --reporter=verbose src/**/load.bench.ts",
		"profile": "node --inspect-brk ./node_modules/.bin/vitest bench --config vitest.config.performance.ts",
		"profile:cpu": "node --prof ./node_modules/.bin/vitest bench --config vitest.config.performance.ts --run",
		"profile:heap": "node --inspect --expose-gc ./node_modules/.bin/vitest bench --config vitest.config.performance.ts --run",
		"ci:test": "vitest run --coverage --reporter=verbose",
		"ci:perf": "vitest bench --run --reporter=json --outputFile=./ci-benchmark-results.json",
		"ci:perf:threshold": "vitest bench --run --reporter=verbose --config vitest.config.performance.ts",
		"benchmark:all": "npm run bench:run && npm run perf:store && npm run perf:memory",
		"benchmark:ci": "npm run ci:perf",
		"benchmark:compare-baseline": "vitest bench --run --reporter=json --outputFile=./baseline-results.json",
		"benchmark:regression": "node scripts/compare-benchmarks.js",
		"analyze": "npm run profile:heap",
		"analyze:bundle": "ANALYZE=true npm run build"
	},
	"dependencies": {
		"@budgetbee/core": "workspace:*",
		"@budgetbee/ui": "workspace:*",
		"@budgetbee/billing": "workspace:*",
		"@hono/zod-validator": "^0.5.0",
		"@hookform/resolvers": "^5.2.1",
		"@next/third-parties": "^15.3.1",
		"@polar-sh/better-auth": "^1.1.0",
		"@polar-sh/sdk": "^0.34.11",
		"@supabase/postgrest-js": "^1.21.2",
		"@tailwindcss/postcss": "^4.1.4",
		"@tanstack/react-query": "^5.74.4",
		"@tanstack/react-query-devtools": "^5.74.4",
		"@tanstack/react-table": "^8.21.3",
		"@tanstack/react-virtual": "^3.13.12",
		"axios": "^1.8.4",
		"better-auth": "^1.3.26",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"cmdk": "^1.0.0",
		"date-fns": "^4.1.0",
		"fz-datetime": "workspace:*",
		"gray-matter": "^4.0.3",
		"hono": "^4.10.3",
		"ioredis": "^5.6.1",
		"jwt-decode": "^4.0.0",
		"lucide-react": "^0.501.0",
		"motion": "^12.23.12",
		"nanoid": "^5.1.5",
		"next": "^15.4.7",
		"next-mdx-remote": "^5.0.0",
		"next-themes": "^0.4.6",
		"nuqs": "^2.4.3",
		"postcss": "^8.5.3",
		"react": "^19.1.0",
		"react-day-picker": "^9.11.0",
		"react-dom": "^19.1.0",
		"react-hook-form": "^7.55.0",
		"recharts": "^2.15.3",
		"rehype-highlight": "^7.0.2",
		"rehype-slug": "^6.0.0",
		"remark-gfm": "^4.0.1",
		"sharp": "^0.34.1",
		"sonner": "^2.0.3",
		"tailwind-merge": "^3.2.0",
		"tailwindcss": "^4.1.4",
		"tailwindcss-animate": "^1.0.7",
		"tw-animate-css": "^1.2.5",
		"zod": "^4.0.15",
		"zustand": "^5.0.3"
	},
	"devDependencies": {
		"@budgetbee/tsconfig": "workspace:*",
		"@next/bundle-analyzer": "^15.5.4",
		"@testing-library/jest-dom": "^6.8.0",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^22",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"@vitest/coverage-v8": "3.2.4",
		"@vitest/ui": "3.2.4",
		"autoprefixer": "^10.4.21",
		"eslint": "^8",
		"eslint-config-next": "15.3.1",
		"jsdom": "^27.0.0",
		"resend": "^5.0.0",
		"typescript": "^5",
		"vitest": "^3.1.1"
	}
}
